<%= form_tag pages_maptest_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Filter by Service", :name => nil %>
  </p>
<% end %>

<% if params[:search].present? %>
  <%= @countmessage %>
<% end %>

<div style="width:950px; margin:0 auto; padding:1em;">
  <div id="map" style='width: 900px; height: 550px;'></div>
</div>
<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(<%=raw @hash.to_json %>);
    handler.fitMapToBounds();
    handler.getMap().setZoom(10);
    handler.map.centerOn(<%=raw @hash.last.to_json %>); 
  });
</script>

